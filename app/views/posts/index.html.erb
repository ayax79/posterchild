<div class="post-form">
  <% form_for(@post) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :body, "What are you doing?", :class => "status_label" %><br/>
        <%= f.text_area :body, :cols => 80, :row => 5 %>
      </p>

      <p>
        <%= f.submit 'Create' %>
      </p>
  <% end %>
</div>

<div class="post-container">
  <% if @posts %>
      <% @posts.each do |post| %>
          <div class="post"><%= h post.body %></div>
      <% end %>
  <% end %>
</div>
